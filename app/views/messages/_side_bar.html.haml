.side-bar
  .header
    .header__zone
      .header__zone__name
        = current_user.name
      .header__zone__icon
        .header__zone__icon__left-icon
          = link_to new_group_path do
            = icon("far", "edit", class: "edit-btn")
        .header__zone__icon__right-icon
          = link_to edit_user_path(current_user) do
            = icon("fas", "cog", class: "cog-btn")
  .groups__list
    - current_user.groups.each do |group|
      .groups
        = link_to '#' do
          .groups__name
            = group.name
          .groups__message
            No Message!!